@page
@model Hillerød_Sejklub.Pages.MembersModel
@{
    ViewData["Title"] = "Medlemmer";
}
<style>
    table {
        width: 90%;
        margin: 20px auto;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    th {
        background-color: #007BFF;
        text-align: center;
        padding: 12px;
        font-size: 18px;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    h1, p {
        text-align: center;
        font-family: Arial, sans-serif;
    }
</style>
<h1>Liste af vores medlemmer</h1>
<p>Her kan du se en liste af de medlemmer vi har i Hillerød Sejlklub.</p>

<table>
    <thead>
        <tr>
            <th>Navn</th>
            <th>Medlemsnummer</th>
            <th>Email</th>
            <th>Telefonnummer</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Hillerød_Sejklub.Pages.MembersModel.Member member in Model.MembersList)
    {
        <tr>
            <td>@member.Name</td>
            <td>@member.MemberId</td>
            <td>@member.Email</td>
            <td>@member.Phone</td>
            <td>@(member.IsActive ? "yes" : "No")</td>
        </tr>
    }
    </tbody>
</table>
